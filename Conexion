import java.sql.*;
/**
 *
 * @author celta
 */
public class Conexion {
    Statement sentence;
            
    Connection c;
    String nombreTabla;

    public Conexion(Statement sentence, Connection c, String nombreTabla) {
        this.sentence = sentence;
        this.c = c;
        this.nombreTabla = nombreTabla;
    }

    public Conexion() {
        throw new UnsupportedOperationException("Not supported yet."); //To change body of generated methods, choose Tools | Templates.
    }
    
    public  void crearBase(String nombreTabla)throws SQLException{
        this.nombreTabla = nombreTabla;
        try {
        sentence=c.createStatement();
        String sql= "CREATE TABLE IF NOT EXISTS "+nombreTabla+" "+
                "(ID_PARTIDA INT NOT NULL PRIMARY KEY,"+
                "NOMBRE TEXT NOT NULL,"+
                "SCORE INT NOT NULL)";
               
        sentence.execute(sql);
        sentence.close();
        c.close();
            System.out.println("TABLA CREADA");
        } catch (Exception e) {
            System.err.println("ERROR CREACION TABLA");
        }
        
        
    
        
    }
    
    
    
    public  void conectarBase(){
        try {
            Class.forName("org.sqlite.JDBC");
            c=DriverManager.getConnection("jdbc:sqlite:exceptionRun.db");
            
        } catch (Exception e) {
            System.err.println("Error al conectar");
        }
        
        
    }
    public  void insertar(String nombreTabla) throws SQLException, ClassNotFoundException{
  
        try {
            PreparedStatement st = c.prepareStatement("insert into "+nombreTabla+" (?,?,?)");
            st.setString(1, "1");
            st.setString(2, "HPA");
            st.setString(3, "55");
            st.execute();
        } catch (Exception e) {
            System.out.println("NO INSERTA");
        }
        
        
        
    }
    public void consultar(String nombreTabla) throws SQLException, ClassNotFoundException{
       
        ResultSet rs = null;
        try {
            PreparedStatement st = c.prepareStatement("select * from Puntuaciones");
            rs = st.executeQuery();
            String dos = rs.getString("ID_PARTIDA");
            String uno = rs.getString("NOMBRE");
            String tres = rs.getString("SCORE");
            System.out.println(uno);
            System.out.println(dos);
            System.out.println(tres);
        } catch (Exception e) {
            System.out.println("NO CONSULTA");
        }
        
    }
    
}
